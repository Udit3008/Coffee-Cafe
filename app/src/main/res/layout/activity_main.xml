<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/coffee4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-: Customer's Personal Details :-"
            android:layout_gravity="center"
            android:fontFamily="monospace"
            android:textSize="18dp"
            android:textColor="#000000"/>


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Customer Name"
            android:layout_margin="16dp"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Customer Email id"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Customer Mobile No."
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="-: Order Details :-"
            android:layout_gravity="center"
            android:fontFamily="monospace"
            android:layout_marginBottom="31dp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="cursive"
            android:text="TOPPINGS"
            android:layout_gravity="fill_horizontal"
            android:textColor="#000000"
            android:textSize="20dp" />


        <CheckBox
            android:id="@+id/whippedcream_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:paddingLeft="14dp"
            android:text="Whipped Cream"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/nutella_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:fontFamily="monospace"
            android:paddingLeft="14dp"
            android:text="Nutella"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/chocolate_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:fontFamily="monospace"
            android:paddingLeft="14dp"
            android:text="Chocolate"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="cursive"
            android:text="QUANTITY"
            android:textColor="#000000"
            android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="57dp">

        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary"
            android:onClick="decreament"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary"
            android:onClick="increament"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="18dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="cursive"
        android:text="ORDER SUMMARY"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/orderSummary_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="26dp"
        android:fontFamily="monospace"
        android:text="Encounter your love with us!"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        android:fontFamily="casual"
        android:onClick="submitOrder"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="20dp"
        android:text="ORDER NOw"
        android:textColor="#ffffff" />

    </LinearLayout>
</ScrollView>